@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

@section Styles {
    <link rel="stylesheet" href="~/css/registracija.css" asp-append-version="true" />
}

<div class="row">
    <!-- Levi stolpec: opis -->
    <div class="levi">
        <h1>Dobrodošli v iFind!</h1>
        <p>Pridružite se naši skupnosti in: </p>
        <ul>
            <li>Objavite svoje dogodke in dosežite širšo publiko</li>
            <li>Poiščite zanimive dogodke v svoji bližini ali kjerkoli po svetu</li>
            <li>Ostanite obveščeni o prihajajočih priložnostih in aktivnostih</li>
        </ul>
        <p>Registracija je hitra in enostavna – ustvarite račun in začnite raziskovati dogodke že danes!</p>
    </div>

    <!-- Desni stolpec: obrazec -->
    <div class="desni">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h2>Registracija</h2>

            <div class="form-group">
                <input asp-for="Input.Ime" class="form-control" placeholder="Ime" />
                <span asp-validation-for="Input.Ime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.Priimek" class="form-control" placeholder="Priimek" />
                <span asp-validation-for="Input.Priimek" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.Spol" class="form-control" placeholder="Spol" />
                <span asp-validation-for="Input.Spol" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="E-mail" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="Geslo" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Potrdite geslo" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="gumbi">
                <a asp-controller="Home" asp-action="Index" class="gumb_nazaj">Nazaj</a>
                <button type="submit" class="gumb_registracija">Registracija</button>
            </div>
        </form>

        <!-- External logins -->
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="mt-3">
                <h3>Registracija preko drugih računov</h3>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-primary m-1" name="provider" value="@provider.Name">@provider.DisplayName</button>
                    }
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
