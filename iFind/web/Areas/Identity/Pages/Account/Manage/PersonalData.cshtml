@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Osebni podatki";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Vaš račun vsebuje osebne podatke, ki ste nam jih posredovali. Na tej strani lahko te podatke izbrišete.
</p>
        <p>
            <strong>Brisanje teh podatkov bo trajno odstranilo vaš račun in tega dejanja ni mogoče razveljaviti.
            </strong>
        </p>
       
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Izbriši račun</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
