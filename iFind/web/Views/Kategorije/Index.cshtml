@model IEnumerable<web.Models.Kategorija>

@{
    ViewData["Title"] = "Kategorije";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
/* --- CSS po vzoru MojiDogodkiViewModel --- */
body {
    background: #f5efff;
    font-family: "Segoe UI", Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.page-title {
    text-align: left;
    margin: 40px auto 10px auto;
    width: 90%;
    max-width: 1200px;
    font-size: 2rem;
    color: #4a0050;
}

.account-content {
    background: white;
    padding: 35px;
    border-radius: 18px;
    box-shadow: 0 5px 15px rgba(135, 28, 135, 0.12);
    width: 90%;
    max-width: 1200px;
    margin: 20px auto;
}

.table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 12px;
}

.table th, .table td {
    padding: 12px 14px;
    text-align: left;
    vertical-align: middle;
    border-bottom: 1px solid #eef1f7;
    color: #2b2b2b;
}

.table thead th {
    background: linear-gradient(90deg, rgba(43,130,203,0.06), rgba(255,255,255,0.03));
    color: #2B82CB;
    font-weight: 600;
    border-bottom: 2px solid rgba(43,130,203,0.12);
}

.table-striped tbody tr:nth-child(odd) {
    background: #fbfbfe;
}

.btn-primary, .action-button {
    background: #2B82CB;
    border: none;
    padding: 10px 18px;
    border-radius: 10px;
    color: white;
    font-weight: 500;
    transition: 0.25s;
}

.btn-primary:hover, .action-button:hover {
    background: #2B82CB;
    box-shadow: 0 5px 10px rgba(135, 28, 135, 0.3);
}

.btn-danger {
    background: #e74c3c;
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 8px;
    font-weight: 600;
    transition: 0.18s;
}

.btn-danger:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 18px rgba(231,76,60,0.18);
}
</style>

<h2 class="page-title">Kategorije</h2>

<div class="account-content">
    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            <strong>Trenutno ni nobene kategorije.</strong>
            <a asp-action="Create" asp-controller="Kategorije" class="btn btn-sm btn-primary" style="margin-left:12px;">Ustvari novo!</a>
        </div>
    }
    else
    {
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Naziv</th>
                    <th>Opis</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kategorija in Model)
                {
                    <tr>
                        <td><strong>@kategorija.Naziv</strong></td>
                        <td>@(string.IsNullOrEmpty(kategorija.Opis) ? "/" : kategorija.Opis)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@kategorija.Id" class="btn btn-sm btn-primary">Uredi</a>
                            <form asp-action="Delete" asp-route-id="@kategorija.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn-danger"
                                        onclick="return confirm('Ste prepričani, da želite izbrisati kategorijo?');">
                                    Izbriši
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
