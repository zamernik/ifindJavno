@model web.Models.Dogodek

@{
    ViewData["Title"] = "Create";
}

<h1>Tukaj dodaš dogodek:</h1>

<div id="map" style="height: 400px; width: 100%; margin-bottom: 20px;"></div>

<div id="coordinates" style="margin-bottom: 20px; font-weight: bold; color: #333;">
    Izberite točko na zemljevidu za postavitev pina.
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" id="Lat" name="Lat" />
            <input type="hidden" id="Lng" name="Lng" />

            <div class="form-group">
                <label asp-for="Naziv"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumCas"></label>
                <input asp-for="DatumCas" class="form-control" />
                <span asp-validation-for="DatumCas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategorijaId"></label>
                <select asp-for="KategorijaId" class="form-control" asp-items="ViewBag.KategorijaId"></select>
            </div>

            <input type="submit" value="Create" class="btn btn-primary" />
        </form>
    </div>
</div>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        var map = L.map('map').setView([46.0512, 14.5051], 8);
        
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png')
            .addTo(map);

        var marker;

        map.on('click', function(e) {
            var lat = e.latlng.lat.toFixed(6);
            var lng = e.latlng.lng.toFixed(6);

            if (marker) map.removeLayer(marker);

            marker = L.marker([lat, lng]).addTo(map);

            document.getElementById('Lat').value = lat;
            document.getElementById('Lng').value = lng;

            document.getElementById('coordinates').innerHTML =
                "Izbrane koordinate: " + lat + ", " + lng;
        });
    </script>
}
